{
  "name": "update-cloudflare-dns",
  "version": "0.4.1",
  "scripts": {
    "build": "tsc",
    "package": "yarn build; ncc build --source-map --license licenses.txt",
    "start": "yarn build; node .build/main.js",
    "dry": "yarn build; DRY_RUN=true node .build/main.js",
    "bump": "yarn package; git add dist; yarn version",
    "test": "jest --watch",
    "test-once": "jest",
    "lint": "eslint --fix src/*",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@actions/core": "1.4.0",
    "@actions/github": "4.0.0",
    "cloudflare": "2.7.0",
    "dotenv": "8.2.0",
    "fp-ts": "2.9.5",
    "hjson": "3.2.2"
  },
  "devDependencies": {
    "@decadejs/eslint-config-base": "1.0.5",
    "@types/cloudflare": "2.7.1",
    "@types/hjson": "2.4.2",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.33",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "@vercel/ncc": "0.27.0",
    "eslint": "7.21.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.2.1",
    "jest": "26.6.3",
    "jest-circus": "26.6.3",
    "jest-extended": "0.11.5",
    "patch-package": "6.4.6",
    "ts-jest": "26.5.6",
    "ts-node": "9.1.1",
    "typescript": "4.3.5"
  },
  "main": ".build/main.js",
  "repository": "https://github.com/pvinis/update-cloudflare-dns.git",
  "author": "Pavlos Vinieratos <pvinis@gmail.com>",
  "license": "MIT"
}
